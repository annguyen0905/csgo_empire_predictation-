<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.coinempireprophet.view.home.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_betFragment"
            app:destination="@id/betFragment" />
        <action
            android:id="@+id/action_homeFragment_to_explainFragment"
            app:destination="@id/explainFragment" />
        <action
            android:id="@+id/action_homeFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/betFragment"
        android:name="com.example.coinempireprophet.view.home.fragment.BetFragment"
        android:label="fragment_bet"
        tools:layout="@layout/fragment_bet" />
    <fragment
        android:id="@+id/explainFragment"
        android:name="com.example.coinempireprophet.view.home.fragment.ExplainFragment"
        android:label="fragment_explain"
        tools:layout="@layout/fragment_explain" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.coinempireprophet.view.home.fragment.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
</navigation>